@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesajı gör</th>
                            </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactId</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date</td>
                                <td><a href="/Contact/MessageDetails/@item.ContactId" class="btn btn-outline-primary">Mesajı gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
        </div>
    </div>
</div>

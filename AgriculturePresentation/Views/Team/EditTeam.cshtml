@model EntityLayer.Concrete.Team


@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım arkadaşı bilgi güncelleme sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.TeamId)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="adsoyad" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görev" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="görsel yolu" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>

                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="facebook linkini giriniz" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="ınstagram linkini giriniz" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">X</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="X linkini giriniz" asp-for="XUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web sitesi</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="varsa web site linkini ekleyin" asp-for="WebsiteUrl">
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>